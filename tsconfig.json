{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "backend/**/*",
    "types.ts",
    "constants.ts",
    "translations.ts",
    "index.tsx",
    "App.tsx",
    "api.ts"
  ],
  "exclude": ["node_modules"]
}